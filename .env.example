# ===========================================
# MOLi-stalknlock 環境變數配置範本
# ===========================================
# 複製此檔案為 .env 並填入實際數值
# 指令: cp .env.example .env

# ==================== 安全性配置 ====================
# JWT 密鑰（必須設置！建議使用以下指令生成）
# python -c 'import secrets; print(secrets.token_urlsafe(32))'
JWT_SECRET_KEY=your-secure-random-32-char-secret-key-here

# JWT 演算法（預設 HS256）
JWT_ALGORITHM=HS256

# JWT Token 有效期（分鐘，預設 480 = 8 小時）
ACCESS_TOKEN_EXPIRE_MINUTES=480

# 速率限制（保護登入端點）
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=5

# ==================== 開發模式 ====================
# 設為 true 時會禁用實際 RFID 讀卡機和 GPIO
DEV_MODE=false

# ==================== 資料庫 ====================
DATABASE_URL=sqlite:///./data/moli_door.db

# ==================== Telegram 通知 ====================
# Telegram Bot Token（從 @BotFather 取得）
BOT_TOKEN=your_telegram_bot_token_here

# Telegram Chat ID（發送通知的群組/頻道 ID）
# 取得方式: 在群組發送訊息後，訪問以下 URL
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TG_CHAT_ID=your_chat_id_here

# ==================== RFID 讀卡機 ====================
# USB RFID 設備路徑（使用 evdev）
# 查找方式: ls -l /dev/input/by-id/ | grep -i "rfid\|reader"
RFID_DEVICE_PATH=/dev/input/by-id/usb-Sycreader_RFID_Technology_Co.__Ltd_SYC_ID_IC_USB_Reader_08FF20140315-event-kbd

# ==================== GPIO 門鎖控制 ====================
# GPIO 腳位編號（BCM 模式）
LOCK_PIN=16

# 觸發電平（1=HIGH, 0=LOW）
LOCK_ACTIVE_LEVEL=1

# 開門持續時間（秒）
LOCK_DURATION=3

# ==================== 卡片註冊綁定 ====================
# 註冊綁定超時時間（秒）
REGISTER_TIMEOUT=90

# ==================== API（選填）====================
API_KEY=
